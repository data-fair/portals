{
  "type": "object",
  "required": ["id", "title", "template"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "title": "Identifiant",
      "readOnly": true
    },
    "portal": {
      "id": {"type": "string"},
      "readOnly": true
    },
    "published": {
      "type": "boolean",
      "title": "Publiée",
      "default": false,
      "x-cols": {"cols": 6, "md": 3}
    },
    "public": {
      "type": "boolean",
      "title": "Publique",
      "default": false,
      "x-cols": {"cols": 6, "md": 3}
    },
    "template": {
      "title": "Modèle de page",
      "type": "string",
      "oneOf": [{
        "const": "blank",
        "title": "Page blanche"
      }],
      "default": "blank",
      "x-cols": {"cols": 6, "md": 3},
      "x-class": "pr-2"
    },
    "navigation": {
      "type": "object",
      "title": "Disposition dans le menu",
      "x-itemKey": "type",
      "oneOf": [{
        "title": "Absent",
        "type": "object",
        "properties": {
          "type": {
            "const": "none"
          }
        }
      },{
        "title": "Lien direct",
        "type": "object",
        "properties": {
          "type": {
            "const": "direct"
          }
        }
      },{
        "title": "Sous-menu",
        "type": "object",
        "properties": {
          "type": {
            "const": "menu"
          },
          "title": {
            "type": "string",
            "title": "Nom du bloc"
          }
        }
      }],
      "default":{"type": "none"},
      "x-cols": {"cols": 6, "md": 3},
      "x-class": "pr-2"
    },
    "title": {
      "type": "string",
      "title": "Libellé",
      "default": "Nouvelle page",
      "x-cols": {"cols": 12, "md": 6},
      "x-class": "pr-2"
    },
    "config": {
      "type": "object",
      "readOnly": true
    },
    "configDraft": {
      "type": "object",
      "readOnly": true
    },
    "topics": {
      "type": "array",
      "items": {
        "title": "Liste de thématiques",
        "type": "object",
        "properties": {
          "color": {"type": "string"},
          "title": {"type": "string"},
          "id": {"type": "string"}
        }
      },
      "x-fromUrl": "{context.dataFairUrl}/api/v1/settings/organization/{context.owner.id}",
      "x-itemsProp": "topics",
      "x-itemTitle": "title",
      "x-itemKey": "id",
      "x-cols": {"cols": 12, "md": 6},
      "x-class": "pr-2"
    },
    "created": {
      "type": "object",
      "additionalProperties": false,
      "readOnly": true,
      "properties": {
        "id": {
          "type": "string",
          "description": "Id of the user that created this page"
        },
        "name": {
          "type": "string",
          "description": "Name of the user that created this page"
        },
        "date": {
          "type": "string",
          "description": "Creation date of this page",
          "format": "date-time"
        }
      }
    },
    "updated": {
      "type": "object",
      "additionalProperties": false,
      "readOnly": true,
      "properties": {
        "id": {
          "type": "string",
          "description": "Id of the user that created this page"
        },
        "name": {
          "type": "string",
          "description": "Name of the user that created this page"
        },
        "date": {
          "type": "string",
          "description": "Creation date of this page",
          "format": "date-time"
        }
      }
    }
  }
}
