{
  "name": "@data-fair/portals",
  "version": "1.66.4",
  "description": "Portals manager for data-fair",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build-types": "mkdir -p ui/src/components/vjsf && rm -f ui/src/components/vjsf/* && df-build-types . --vjsf-dir ui/src/components/vjsf",
    "dev-api": "npm -w api run dev",
    "dev-deps": "docker compose --profile dev up -d --wait",
    "stop-dev-deps": "docker compose --profile dev stop",
    "test-deps": "docker compose --profile test up -d --wait",
    "stop-test-deps": "docker compose --profile test stop",
    "dev-ui": "npm -w ui run dev",
    "dev-ingress-manager": "NODE_ENV=development node --watch --experimental-strip-types dev/ingress-manager.ts",
    "dev-zellij": "export DEV_SHELL=$(basename \"$SHELL\") && zellij --layout .zellij.kdl && rm data/zellij-deps-ready",
    "lint": "eslint . && npm -w ui run lint",
    "lint-fix": "eslint --fix . && npm -w ui run lint-fix",
    "test": "npm run test-base -- test-it/*.ts",
    "test-base": "NODE_ENV=test node --test-force-exit --test-concurrency=1 --test",
    "check-types": "tsc && npm -w ui run check-types",
    "prepare": "husky || true",
    "prepare-fonts": "rm -rf api/assets/fonts && mkdir api/assets/fonts && rm -rf portal/public/fonts && mkdir portal/public/fonts && node dev/scripts/prepare-fonts.js",
    "quality": "npm run dev-deps && npm run lint && npm run build-types && npm run check-types && npm -w ui run build && npm run test && npm audit --omit=dev --audit-level=critical"
  },
  "workspaces": [
    "api",
    "ui",
    "portal"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/data-fair/portals.git"
  },
  "author": "Alban Mouton <alban.mouton@koumoul.com>",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://gitlab.com/data-fair/portals/issues"
  },
  "homepage": "https://gitlab.com/data-fair/portals#readme",
  "dependencies": {
    "@data-fair/lib-types-builder": "^1.8.2",
    "@types/debug": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@data-fair/lib-node": "^2.9.0",
    "@koumoul/vjsf-compiler": "^1.1.0",
    "@types/config": "^3.3.5",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.14",
    "@types/sanitize-html": "^2.16.0",
    "commitlint": "^19.8.1",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^10.3.0",
    "eslint-plugin-vuetify": "^2.5.2",
    "husky": "^9.1.7",
    "neostandard": "^0.12.2",
    "tough-cookie": "^5.1.2"
  }
}
